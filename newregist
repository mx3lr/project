db.commit() #saves changes

   
def date_validate(date):
    try:
        dt.datetime.strptime(date, "%d-%m-%y")
        return True
        

    except:
        messagebox.showerror("Date", "Invaild Date please enter a valid date DD-MM-YYYY")
    
