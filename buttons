        title1= tk.Label(self, text="What went well: ")

        title1.grid(row=1, column=0,sticky = "E")

        title2= tk.Label(self, text="What could you do next time to improve: ")

        title2.grid(row=2, column=0,sticky = "E")



        
        

app=ChemVision()
app.mainloop()


